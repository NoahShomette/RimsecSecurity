<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success></success>
    <operations>
      <li Class="PatchOperationFindMod">
        <mods>
          <li>Combat Extended</li>
          <li>CombatExtended</li>
        </mods>
        <match Class="PatchOperationSequence">
          <operations>

            <li Class="PatchOperationAddModExtension">
              <xpath>
                Defs/PawnKindDef[
                defName="RSPeacekeeperDefenderPawnKind" or
                defName="RSPeacekeeperEnforcerPawnKind" or
                defName="RSPeacekeeperSentinelPawnKind"
                ]
              </xpath>
              <value>
                <li Class="CombatExtended.LoadoutPropertiesExtension">
                  <primaryMagazineCount>
                    <min>4</min>
                    <max>6</max>
                  </primaryMagazineCount>
                  <sidearms>
                    <li>
                      <generateChance>0.5</generateChance>
                      <sidearmMoney>
                        <min>20</min>
                        <max>120</max>
                      </sidearmMoney>
                      <weaponTags>
                        <li>CE_Sidearm_Melee</li>
                      </weaponTags>
                    </li>
                  </sidearms>
                </li>
              </value>
            </li>

            <li Class="PatchOperationAddModExtension">
              <xpath>
                Defs/PawnKindDef[
                defName="RSPeacekeeperDefenderPawnKind"
                ]
              </xpath>
              <value>
                <li Class="CombatExtended.LoadoutPropertiesExtension">
                  <primaryMagazineCount>
                    <min>12</min>
                    <max>12</max>
                  </primaryMagazineCount>
                  <sidearms>
                    <li>
                      <generateChance>1</generateChance>
                      <sidearmMoney>
                        <min>0</min>
                        <max>1250</max>
                      </sidearmMoney>
                      <weaponTags>
                        <li>CE_Sidearm_Defender</li>
                      </weaponTags>
                    </li>
                  </sidearms>
                </li>
              </value>
            </li>

            <li Class="PatchOperationAddModExtension">
              <xpath>
                Defs/PawnKindDef[
                defName="RSPeacekeeperEnforcerPawnKind"
                ]
              </xpath>
              <value>
                <li Class="CombatExtended.LoadoutPropertiesExtension">
                  <primaryMagazineCount>
                    <min>12</min>
                    <max>12</max>
                  </primaryMagazineCount>
                  <sidearms>
                    <li>
                      <generateChance>1</generateChance>
                      <sidearmMoney>
                        <min>0</min>
                        <max>1250</max>
                      </sidearmMoney>
                      <weaponTags>
                        <li>CE_Sidearm_Enforcer</li>
                      </weaponTags>
                    </li>
                  </sidearms>
                </li>
              </value>
            </li>

            <li Class="PatchOperationAddModExtension">
              <xpath>
                Defs/PawnKindDef[
                defName="RSPeacekeeperSentinelPawnKind"
                ]
              </xpath>
              <value>
                <li Class="CombatExtended.LoadoutPropertiesExtension">
                  <primaryMagazineCount>
                    <min>12</min>
                    <max>12</max>
                  </primaryMagazineCount>
                  <sidearms>
                    <li>
                      <generateChance>1</generateChance>
                      <sidearmMoney>
                        <min>0</min>
                        <max>1250</max>
                      </sidearmMoney>
                      <weaponTags>
                        <li>CE_Sidearm_Sentinel</li>
                      </weaponTags>
                    </li>
                  </sidearms>
                </li>
              </value>
            </li>

          </operations>
        </match>
      </li>
    </operations>
  </Operation>
</Patch>